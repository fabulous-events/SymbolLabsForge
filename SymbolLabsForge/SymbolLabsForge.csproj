<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core Microsoft.Extensions packages -->
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options.DataAnnotations" Version="10.0.0" />

    <!-- Scrutor for DI scanning -->
    <PackageReference Include="Scrutor" Version="6.1.0" />

    <!-- ImageSharp for symbol rendering -->
    <PackageReference Include="SixLabors.ImageSharp.Drawing" Version="2.1.7" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference to contracts project -->
    <ProjectReference Include="..\SymbolLabsForge.Contracts\SymbolLabsForge.Contracts.csproj" />
    <ProjectReference Include="..\SymbolLabsForge.Validation.Core\SymbolLabsForge.Validation.Core.csproj" />
    <ProjectReference Include="..\SymbolLabsForge.ImageProcessing.Utilities\SymbolLabsForge.ImageProcessing.Utilities.csproj" />
    <ProjectReference Include="..\SymbolLabsForge.Configuration.Validation\SymbolLabsForge.Configuration.Validation.csproj" />
    <ProjectReference Include="..\SymbolLabsForge.Provenance.Utilities\SymbolLabsForge.Provenance.Utilities.csproj" />
    <ProjectReference Include="..\SymbolLabsForge.Testing.Utilities\SymbolLabsForge.Testing.Utilities.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Allow internal visibility for tests -->
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>SymbolLabsForge.Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

</Project>
